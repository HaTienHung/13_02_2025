                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Sản phẩm không đủ hàng trong kho."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },

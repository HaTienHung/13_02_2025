                                "properties": {
                                    "items": {
                                        "description": "Danh sách sản phẩm trong đơn hàng",
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "product_id": {
                                                    "description": "ID sản phẩm",
                                                    "type": "integer",
                                                    "example": 5
                                                },
                                                "quantity": {
                                                    "description": "Số lượng sản phẩm",
                                                    "type": "integer",
                                                    "example": 2
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Đặt hàng thành công",

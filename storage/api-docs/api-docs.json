                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "user_id",
                                    "items"
                                ],
                                "properties": {
                                    "items": {
                                        "description": "Danh sách sản phẩm trong đơn hàng",
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "product_id": {
                                                    "description": "ID sản phẩm",
                                                    "type": "integer",
                                                    "example": 5
                                                },
                                                "quantity": {
                                                    "description": "Số lượng sản phẩm",
                                                    "type": "integer",
                                                    "example": 2
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Đặt hàng thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Đặt hàng thành công!"
                                        },
                                        "order_id": {
                                            "type": "integer",
                                            "example": 123
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Lỗi dữ liệu hoặc sản phẩm không đủ hàng",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Sản phẩm không đủ hàng trong kho."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/app/orders/show": {
            "get": {
                "tags": [
                    "APP"
                ],
                "summary": "Lấy danh sách đơn hàng của người dùng hiện tại",
                "description": "Trả về danh sách đơn hàng của người dùng đang đăng nhập dựa trên token.",
                "operationId": "295874e55a1fdb41ed71c52044a7cf92",
                "responses": {
                    "200": {
                        "description": "Danh sách đơn hàng của người dùng",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "description": "ID đơn hàng",
                                                "type": "integer"
                                            },
                                            "user_id": {
                                                "description": "ID người dùng",
                                                "type": "integer"
                                            },
                                            "total_price": {
                                                "description": "Tổng giá trị đơn hàng",
                                                "type": "string"
                                            },
                                            "status": {
                                                "description": "Trạng thái đơn hàng",
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "description": "Thời gian tạo đơn hàng",
                                                "type": "string",
                                                "format": "date-time"
                                            },
                                            "updated_at": {
                                                "description": "Thời gian cập nhật đơn hàng",
                                                "type": "string",
                                                "format": "date-time"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Chưa xác thực (token không hợp lệ hoặc thiếu)"
                    },
                    "404": {
                        "description": "Không tìm thấy đơn hàng"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },

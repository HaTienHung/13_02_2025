                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Đặt hàng thành công!"
                                        },
                                        "order_id": {
                                            "type": "integer",
                                            "example": 123
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Lỗi dữ liệu hoặc sản phẩm không đủ hàng",
                        "content": {
